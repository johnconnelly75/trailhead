<aura:component>

        <aura:attribute name="item" type="Camping_Item__c" required="true"/>

        <p>{!v.item.Name}</p>
        
        <p><lightning:formattedNumber value="{!v.item.Price__c}" style="currency"/></p>
        <p><lightning:formattedNumber value="{!v.item.Quantity__c}" style="number"/></p>
        <p>
                <lightning:input type="toggle"                            
                                 label="Packed?"                           
                                 name="packed"                         
                                 checked="{!v.item.Packed__c}" />
             </p> 

             
             <lightning:button label="Packed!" onclick="{!c.packItem}" disabled="{!(v.item.Packed__c) ? true : false}" />

</aura:component>	
